{
  "name": "@nestjstools/messaging-azure-service-bus-extension",
  "version": "1.1.1",
  "description": "Extension to handle messages and dispatch them over Azure service bus",
  "author": "Sebastian Iwanczyszyn",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "bugs": {
    "url": "https://github.com/nestjstools/messaging-azure-service-bus-extension/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nestjstools/messaging-azure-service-bus-extension"
  },
  "keywords": [
    "nestjs-tools",
    "nestjs",
    "distributed",
    "messaging",
    "nestjs-messaging",
    "message-bus",
    "service-bus",
    "microservices",
    "azure-service-bus",
    "azure",
    "nestjs-azure-service-bus",
    "nestjs-azure"
  ],
  "files": [
    "lib",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@azure/service-bus": "^7.9.5"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.x||^11.x",
    "@nestjs/core": "^10.x||^11.x",
    "@nestjstools/messaging": "^2.x",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.x"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@nestjstools/messaging": "^2.18.0",
    "@semantic-release/github": "^11.0.3",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "semantic-release": "^24.2.6",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
